@model List<Livro>
@{
    ViewData["Title"] = "Listagem de Livros";
}

<div class="row">
    <div class="col-md-12">
        @if (Model.Count > 0)
        {
            <table id="myTable" class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Titulo</th>
                        <th>Autor</th>
                        <th>Ano</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Livro l in Model)
                    {
                        <tr>
                            <td>@l.Id</td>
                            <td>@l.Titulo</td>
                            <td>@l.Autor</td>
                            <td>@l.Ano</td>
                            <td><a href="/Livro/Edicao/@l.Id" class="btn btn-primary">Editar</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <h3>"Nenhum registro encontrado"</h3>
        }
    </div>
</div>

@section Scripts{
<script>
    $(document).ready(function () {
        $('#myTable').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/9dcbecd42ad/i18n/Portuguese-Brasil.json"
            }
        });
    });
</script>
}