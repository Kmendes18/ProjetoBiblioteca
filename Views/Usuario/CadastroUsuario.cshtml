@model Usuario

<h1 class="row justify-content-md-center">Registre um usuário</h1>

<div class="row justify-content-md-center">    

    <form asp-action="CadastroUsuario" method="post" class="col-md-4">
        <div class="form-group">
            <label asp-for="nome">Nome</label>
            <input asp-for="nome" class="form-control" type="text" name="nome" id="userNome" placeholder="nome" required/>            
        </div>

        <div class="form-group">
            <label asp-for="login">Login</label>
            <input asp-for="login" class="form-control" type="text" name="login" id="userLogin" placeholder="login" required/>
        </div>

        <div class="form-group">
            <label asp-for="senha">Senha</label>
            <input asp-for="senha" class="form-control" type="text" name="senha" id="userSenha" placeholder="senha" required/>
        </div>

        <div class="form-group">
            <label asp-for="Tipo">Tipo de Usuario</label>
            <select asp-for="Tipo" name="Tipo" id="userTipo" class="form-control">

                <option value="@Usuario.Admin">Administrador</option>

                <option value="@Usuario.Padrao">Padrão</option>

            </select>
        </div> 

        <input type="submit" value="REGISTRAR" class="btn btn-primary" />

    </form>
</div>


