@model Usuario

<h1 style="color: red;">ALERTA!!!</h1>

<h2>Tem certeza que deseja Excluir o Usuário @Model.nome @Model.login?</h2>

<p>A exclusão é irreversível!</p>



<form action="ExcluirUsuario" method="post">

    <input type="hidden" name="id" value="@Model.Id">

    <a href="/Usuario/Listagem" input name="decisao" type="submit" value="CANCELAR" class="btn btn-primary">CANCELAR</a>

    <input name="decisao" type="submit" value="EXCLUIR" class="btn btn-primary" />

</form>